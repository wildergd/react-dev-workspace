{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.3"
  },
  "scripts": {
    "build": "lerna run build",
    "build:ui-library": "lerna run build --scope @namespace/react-components",
